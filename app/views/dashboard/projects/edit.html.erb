<div class="max-w-md space-y-10">
  <div>
    <h1 class="text-[22px] font-semibold tracking-tight mb-8" style="color: #1A1A1A;">Settings</h1>
    <%= render 'form', project: @project %>
  </div>

  <div class="pt-8" style="border-top: 1px solid #E8E5E0;">
    <h2 class="text-[15px] font-medium mb-5" style="color: #1A1A1A;">API Keys</h2>
    <div class="space-y-4">
      <div class="space-y-2">
        <label class="block text-[13px] font-medium" style="color: #6B6760;">Ingest Key</label>
        <code class="block w-full px-4 py-3 text-[13px] font-mono rounded-lg" style="background: #F5F3F0; color: #6B6760;"><%= @project.ingest_key %></code>
      </div>
      <div class="space-y-2">
        <label class="block text-[13px] font-medium" style="color: #6B6760;">API Key</label>
        <code class="block w-full px-4 py-3 text-[13px] font-mono rounded-lg" style="background: #F5F3F0; color: #6B6760;"><%= @project.api_key %></code>
      </div>
    </div>
  </div>

  <div class="pt-8" style="border-top: 1px solid #E8E5E0;">
    <h2 class="text-[15px] font-medium mb-5" style="color: #1A1A1A;">Archive Management</h2>
    <p class="text-[13px] mb-4" style="color: #6B6760;">
      View archive status, preview logs to be archived, or manually trigger archiving.
    </p>
    <%= link_to dashboard_project_archive_path(@project), class: "inline-block px-4 py-2 text-[13px] font-medium rounded-lg", style: "background: #F5F3F0; color: #1A1A1A; border: 1px solid #E8E5E0;" do %>
      Manage Archive &rarr;
    <% end %>
  </div>

  <div class="pt-8" style="border-top: 1px solid #E8E5E0;">
    <h2 class="text-[15px] font-medium mb-5" style="color: #C94A4A;">Danger Zone</h2>
    <%= button_to 'Delete Project', dashboard_project_path(@project), method: :delete, data: { turbo_confirm: 'Are you sure? This will delete all logs.' }, class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer", style: "background: #FEE8E8; color: #C94A4A;" %>
  </div>
</div>
