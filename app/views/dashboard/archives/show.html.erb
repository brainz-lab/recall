<div class="max-w-2xl mx-auto space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-[24px] font-semibold" style="color: #1A1A1A;">Archive Settings</h1>
      <p class="text-[14px] mt-1" style="color: #6B6760;"><%= @project.name %></p>
    </div>
    <%= link_to dashboard_project_logs_path(@project), class: "text-[14px] font-medium", style: "color: #1D4ED8;" do %>
      &larr; Back to Logs
    <% end %>
  </div>

  <% if flash[:notice] %>
    <div class="px-4 py-3 rounded-lg text-[14px]" style="background: #ECFDF5; color: #065F46; border: 1px solid #A7F3D0;">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="px-4 py-3 rounded-lg text-[14px]" style="background: #FEF2F2; color: #991B1B; border: 1px solid #FECACA;">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <!-- Current Status -->
  <div class="px-6 py-5 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
    <h2 class="text-[16px] font-semibold mb-4" style="color: #1A1A1A;">Archive Status</h2>

    <div class="grid grid-cols-2 gap-4">
      <div class="p-4 rounded-lg" style="background: #F5F3F0;">
        <div class="text-[12px] font-medium mb-1" style="color: #6B6760;">Retention Period</div>
        <div class="text-[18px] font-semibold" style="color: #1A1A1A;">
          <%= @project.retention_days %> days
        </div>
      </div>

      <div class="p-4 rounded-lg" style="background: #F5F3F0;">
        <div class="text-[12px] font-medium mb-1" style="color: #6B6760;">Auto-Archive</div>
        <div class="text-[18px] font-semibold" style="color: <%= @project.archive_enabled? ? '#059669' : '#6B6760' %>;">
          <%= @project.archive_enabled? ? 'Enabled' : 'Disabled' %>
        </div>
      </div>

      <div class="p-4 rounded-lg" style="background: #F5F3F0;">
        <div class="text-[12px] font-medium mb-1" style="color: #6B6760;">Logs to Archive</div>
        <div class="text-[18px] font-semibold" style="color: <%= @preview[:logs_to_archive] > 0 ? '#D97757' : '#1A1A1A' %>;">
          <%= number_with_delimiter(@preview[:logs_to_archive]) %>
        </div>
      </div>

      <div class="p-4 rounded-lg" style="background: #F5F3F0;">
        <div class="text-[12px] font-medium mb-1" style="color: #6B6760;">Last Archived</div>
        <div class="text-[18px] font-semibold" style="color: #1A1A1A;">
          <%= @project.last_archived_at ? time_ago_in_words(@project.last_archived_at) + ' ago' : 'Never' %>
        </div>
      </div>
    </div>

    <div class="mt-4 p-3 rounded-lg text-[13px]" style="background: #FEF3C7; color: #92400E;">
      Logs older than <strong><%= @preview[:cutoff_date].strftime('%B %d, %Y') %></strong> will be archived.
    </div>
  </div>

  <!-- Manual Archive -->
  <div class="px-6 py-5 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
    <h2 class="text-[16px] font-semibold mb-4" style="color: #1A1A1A;">Manual Archive</h2>

    <% if @project.archive_enabled? %>
      <% if @preview[:logs_to_archive] > 0 %>
        <p class="text-[14px] mb-4" style="color: #6B6760;">
          This will permanently delete <%= number_with_delimiter(@preview[:logs_to_archive]) %> logs older than <%= @project.retention_days %> days.
        </p>

        <%= form_with url: dashboard_project_archive_path(@project), method: :post, class: "space-y-4" do |f| %>
          <label class="flex items-center gap-2 cursor-pointer">
            <%= f.check_box :export_before_delete, class: "w-4 h-4 rounded", style: "accent-color: #D97757;" %>
            <span class="text-[14px]" style="color: #1A1A1A;">Export logs before deleting</span>
          </label>

          <div class="flex gap-3">
            <%= f.submit "Archive Now",
                class: "px-4 py-2 text-[14px] font-medium rounded-lg cursor-pointer",
                style: "background: #DC2626; color: #FFFFFE;",
                data: { turbo_confirm: "Are you sure you want to archive #{number_with_delimiter(@preview[:logs_to_archive])} logs? This cannot be undone." } %>
          </div>
        <% end %>
      <% else %>
        <p class="text-[14px]" style="color: #6B6760;">
          No logs are eligible for archiving. All logs are within the retention period.
        </p>
      <% end %>
    <% else %>
      <p class="text-[14px] mb-4" style="color: #6B6760;">
        Archive is not enabled for this project. Enable it in project settings to archive old logs.
      </p>
      <%= link_to "Edit Project Settings", edit_dashboard_project_path(@project),
          class: "inline-block px-4 py-2 text-[14px] font-medium rounded-lg",
          style: "background: #1A1A1A; color: #FFFFFE;" %>
    <% end %>
  </div>

  <!-- Settings Link -->
  <div class="text-center">
    <%= link_to "Edit Archive Settings", edit_dashboard_project_path(@project),
        class: "text-[14px]", style: "color: #1D4ED8;" %>
  </div>
</div>
